{
  "type": "object",
  "properties": {
    {% if component.description %}
    "component_description": {
      "type": "string",
      "title": "Component Description",
      "uihints": {
        "readonly": true
      }
    },{% endif %}
    "label": {
      "type": "string",
      "title": "Label",
      "description": "A custom label for the node."
    },
    "component_parameters": {
      "type": "object",
      "properties": {
        {% for property in component.properties %}
        "{{ property.ref }}": {
          "title": "{{ property.name }}",
          "description": {{ property.description|tojson|safe }},
          {{ render_parameter_details(property) }}
        },
        {% endfor %}
        {% if "mounted_volumes" not in elyra_property_collisions_list %}
        "elyra_mounted_volumes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "title": "Data Volumes",
          "description": "Volumes to be mounted in this node. The specified Persistent Volume Claims must exist in the Kubernetes namespace where the node is executed or this node will not run.",
          "uihints": {
            "items": {
              "ui:placeholder": "/mount/path=pvc-name"
            },
            "keyValueEntries": true
          }
        },
        {% endif %}
        "component_source": {
          "type": "string",
          "title": "Component Source",
          "uihints": {
            "readonly": true
          }
        }
      }
    },
    "required": [
      {% for property in component.properties %}
        {% if property.required|lower %}
        "{{ property.ref }}"
            {% if loop.index != loop|length %}
            ,
            {% endif %}
          {% endif %}
      {% endfor %}
    ]
  },
  "required": ["component_parameters"]
}
