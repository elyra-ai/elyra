{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Component Registry",
  "name": "component-registry",
  "display_name": "Components",
  "namespace": "component-registries",
  "uihints": {
    "title": "Components",
    "icon": "",
    "reference_url": ""
  },
  "properties": {
    "schema_name": {
      "title": "Schema Name",
      "description": "The schema associated with this instance",
      "type": "string",
      "pattern": "^[a-z][a-z0-9-_]*[a-z0-9]$",
      "minLength": 1
    },
    "display_name": {
      "title": "Display Name",
      "description": "Display name of this Component Registry",
      "type": "string",
      "minLength": 1
    },
    "metadata": {
      "description": "Additional data specific to this metadata",
      "type": "object",
      "properties": {
        "description": {
          "title": "Description",
          "description": "Description of this Component Registry",
          "type": "string"
        },
        "runtime": {
          "title": "Runtime",
          "description": "The runtime associated with this Component Registry",
          "type": "string"
        },
        "locations": {
          "title": "",
          "description": "",
          "type": "array",
          "items": [
            {
              "type": "object",
              "properties": {
                "location_path": {
                  "title": "Location Path",
                  "description": "The path to this component registry location",
                  "type": "string"
                },
                "location_type": {
                  "title": "Location Type",
                  "description": "The type of location for this registry",
                  "type": "string",
                  "enum": ["url", "filename", "directory"],
                  "uihints": {
                    "field_type": "dropdown"
                  }
                },
                "categories": {
                  "title": "Categories",
                  "description": "Categories that apply to this registry location",
                  "type": "array",
                  "items": [
                    {
                      "type": "string"
                    }
                  ]
                }
              },
              "required": ["location_path", "location_type"]
            }
          ]
        }
      },
      "required": ["runtime", "locations"]
    }
  },
  "required": ["schema_name", "display_name", "metadata"]
}
