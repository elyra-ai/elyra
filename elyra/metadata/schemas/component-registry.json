{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Component Registry",
  "name": "component-registry",
  "display_name": "Pipeline Component",
  "namespace": "component-registries",
  "schema_filter_class_name": "elyra.pipeline.component_registry.RegistrySchemaFilter",
  "uihints": {
    "title": "Pipeline Components",
    "icon": "",
    "reference_url": "https://elyra.readthedocs.io/en/stable/user_guide/pipeline-components.html"
  },
  "properties": {
    "schema_name": {
      "title": "Schema Name",
      "description": "The schema associated with this instance",
      "type": "string",
      "pattern": "^[a-z][a-z0-9-_]*[a-z0-9]$",
      "minLength": 1
    },
    "display_name": {
      "title": "Display Name",
      "description": "Display name of this Component Registry",
      "type": "string",
      "minLength": 1
    },
    "metadata": {
      "description": "Additional data specific to this metadata",
      "type": "object",
      "properties": {
        "description": {
          "title": "Description",
          "description": "Description of this Component Registry",
          "type": "string"
        },
        "categories": {
          "title": "Categories",
          "description": "Categories that apply to this registry location",
          "type": "array",
          "uihints": {
            "field_type": "tags"
          }
        },
        "runtime": {
          "title": "Runtime",
          "description": "The runtime associated with this Component Registry",
          "type": "string",
          "$comment": "This enum is dynamically generated to contain the available runtime values.",
          "enum": ["{schema-filter-value}"],
          "uihints": {
            "field_type": "dropdown",
            "category": "Source"
          }
        },
        "location_type": {
          "title": "Location Type",
          "description": "The type of location for this registry",
          "type": "string",
          "enum": ["URL", "Filename", "Directory"],
          "uihints": {
            "field_type": "dropdown",
            "category": "Source"
          }
        },
        "paths": {
          "title": "Paths",
          "description": "The paths to the component specification files",
          "type": "array",
          "items": [
            {
              "type": "string"
            }
          ],
          "uihints": {
            "category": "Source"
          }
        }
      },
      "required": ["runtime", "location_type", "paths"]
    }
  },
  "required": ["schema_name", "display_name", "metadata"]
}
