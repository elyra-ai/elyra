{
  "extends": "../../tsconfig-base",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "suppressImplicitAnyIndexErrors": true,
    "target": "es6",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/*", "src/*/*"],
  "files": [
    "src/palette.json",
    "src/properties.json",
    "src/en.json",
    "src/pipeline-template.json"
  ],
  "references": [
    {
      "path": "../application"
    },
    {
      "path": "../ui-components"
    }
  ]
}
